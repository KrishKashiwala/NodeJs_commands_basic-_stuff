<html lang="en">
        <%- include("./partials/head.ejs") %>

        <body>
            <%- include("./partials/nav.ejs") %>

                <h2>All Blogs</h2>
                <div class="blogs content">

                    <% if (blogs.length> 0) { %>
                        <% blogs.forEach(blog=> { %>
                            <h3 class="title">
                                <%= blog.title %>
                            </h3>
                            <p class="snippet">
                                <%= blog.snippet %>
                            </p>
                            <% }) %>
                                <% } else { %>
                                    <p>There are no blogs to display...</p>
                                    <% } %>

                </div>

                <%- include("./partials/footer.ejs") %>
        </body>

</html>